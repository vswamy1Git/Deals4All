%h3 Details about #{@product.title}

%ul#details
  %li
    Product code:
    = @product.productcode
  %li
    Product name:
    = @product.title
  %li
    Offer:
    = @product.originalprice
  %li
    Offer:
    = @product.offer
  %li
    Offer status:
    = @product.status

= link_to 'Edit', edit_product_path(@product)
= button_to 'Delete', product_path(@product), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-primary'
= link_to 'Back to Product list', products_path
